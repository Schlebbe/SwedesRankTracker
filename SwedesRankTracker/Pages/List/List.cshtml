@page "/list"
@model SwedesRankTracker.Pages.List.ListModel
@{
}

<!-- Header -->
<header>
    <div class="header-left">
        <h1>Swedes Clan Tracker</h1>
        <p>TempleOSRS Rank Management</p>
    </div>
    <div class="header-right">
        <button id="syncAllBtn">Sync All Members</button>
    </div>
</header>

<!-- Cards -->
<div class="container cards-container list-card">
    <div class="card">
        <div class="flex justify-between items-center">
            <div>
                <p class="card-title text-sm">Total Members</p>
                <p class="card-value text-3xl">@((Model.Members?.Count ?? 0))</p>
            </div>
            <svg class="w-10 h-10" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
        </div>
    </div>

    <div class="card card-emerald">
        <div class="flex justify-between items-center">
            <div>
                <p class="card-title text-sm">Last Synced</p>
                <p class="card-value">11/30/2025, 9:01 PM</p>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline>
                <polyline points="16 7 22 7 22 13"></polyline>
            </svg>
        </div>
    </div>

    <div class="card">
        <div class="flex justify-between items-center">
            <div>
                <p class="card-title text-sm">Top Rank</p>
                <p class="card-value text-2xl" style="background: var(--gold-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Officer</p>
                <p class="card-title text-sm">400 members</p>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M11.562 3.266a.5.5 0 0 1 .876 0L15.39 8.87a1 1 0 0 0 1.516.294L21.183 5.5a.5.5 0 0 1 .798.519l-2.834 10.246a1 1 0 0 1-.956.734H5.81a1 1 0 0 1-.957-.734L2.02 6.02a.5.5 0 0 1 .798-.519l4.276 3.664a1 1 0 0 0 1.516-.294z"></path>
                <path d="M5 21h14"></path>
            </svg>
        </div>
    </div>
</div>

<!-- Table -->
<div class="table-container">
    <div class="table-header">
        <h2>Clan Members</h2>
        <input type="text" placeholder="Search members..." id="searchInput">
    </div>
    <table>
        <thead>
            <tr>
                <th>RSN</th>
                <th>Rank</th>
                <th>Total Level</th>
                <th>EHB</th>
                <th>EHP</th>
                <th>Pets</th>
                <th>Collection Logs</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="membersTable">
            @if (Model.Members != null)
            {
                @foreach (var member in Model.Members)
                {
                    <tr>
                        <td>@member.UserName</td>
                        <td>Nice rank bro</td>
                        <td>nice total bro</td>
                        <td>@member.Ehb</td>
                        <td>@member.Ehp</td>
                        <td>@member.Pets</td>
                        <td>@member.Collections</td>
                        <td><button class="btn-update"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-refresh-cw h-4 w-4"><path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path><path d="M21 3v5h-5"></path><path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path><path d="M8 16H3v5"></path></svg></button></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>